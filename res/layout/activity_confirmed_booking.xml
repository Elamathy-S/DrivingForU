<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STARTING POINT: "
        android:textSize="20dp"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:id="@+id/starting_point_c"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENDING POINT: "
        android:textSize="20dp"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:id="@+id/ending_point_c"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TRIP TYPE: "
        android:textSize="20dp"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:id="@+id/radio_trip_c"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DATE:"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:padding="5dp"
        android:id="@+id/date_id_c"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TIME: "
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:id="@+id/time_id_c"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="YOUR TRIP HAS BEEN CONFIRMED!"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:padding="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="LOG OUT"
        android:textColor="#000000"
        android:background="#00FEFE"
        android:padding="5dp"
        android:id="@+id/logout"/>

</LinearLayout>